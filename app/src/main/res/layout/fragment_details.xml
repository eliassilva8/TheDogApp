<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentationlayer.fragments.DetailsFragment">

    <ImageView
        android:id="@+id/dogImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/breedNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogImage"
        android:text="@string/name"/>

    <TextView
        android:id="@+id/breedName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/breedNameLabel"
        app:layout_constraintTop_toTopOf="@+id/breedNameLabel"
        app:layout_constraintBottom_toBottomOf="@id/breedNameLabel"
        tools:text="Name" />

    <TextView
        android:id="@+id/breedGroupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/breedNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/breedNameLabel"
        android:text="@string/group"/>

    <TextView
        android:id="@+id/breedGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/breedName"
        app:layout_constraintStart_toEndOf="@id/breedGroupLabel"
        app:layout_constraintTop_toTopOf="@id/breedGroupLabel"
        app:layout_constraintBottom_toBottomOf="@id/breedGroupLabel"
        tools:text="Group"/>

    <TextView
        android:id="@+id/originLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/breedNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/breedGroupLabel"
        android:text="@string/origin"
        tools:text="Origin"/>

    <TextView
        android:id="@+id/origin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/breedName"
        app:layout_constraintStart_toEndOf="@id/originLabel"
        app:layout_constraintTop_toTopOf="@id/originLabel"
        app:layout_constraintBottom_toBottomOf="@id/originLabel"
        tools:text="Origin"/>

    <TextView
        android:id="@+id/temperamentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/breedNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/originLabel"
        android:text="@string/temperament"
        tools:text="Temperament"/>

    <TextView
        android:id="@+id/temperament"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@id/breedName"
        app:layout_constraintStart_toEndOf="@id/temperamentLabel"
        app:layout_constraintTop_toTopOf="@id/temperamentLabel"
        tools:text="Temperament"/>
</androidx.constraintlayout.widget.ConstraintLayout>